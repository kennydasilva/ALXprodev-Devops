#!/usr/bin/env bash

# Create directory to store pokemon data
mkdir -p pokemon_data

# List of Pokémon
pokemon_list=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")

# Function to fetch Pokémon data
fetch_pokemon() {
    pokemon="$1"
    echo "Fetching data for $pokemon..."

    curl -s -f "https://pokeapi.co/api/v2/pokemon/$pokemon" \
        -o "pokemon_data/$pokemon.json"

    if [ $? -eq 0 ]; then
        echo "Saved data to pokemon_data/$pokemon.json ✅"
    else
        echo "Error fetching data for $pokemon ❌"
    fi
}

# Start fetching in parallel
for pokemon in "${pokemon_list[@]}"; do
    fetch_pokemon "$pokemon" &
done

# List background jobs (process management)
jobs

# Wait for all background processes to finish
wait

# Safety cleanup (process management example)
kill $(jobs -p) 2>/dev/null

echo "All Pokémon data fetched."
